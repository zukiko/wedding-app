<h2>WEDDING INVITATION</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="form-text">いずれかをお選び下さい</label></br>
      <%= f.radio_button :attendance, "出席" %>
      <%= f.label :attendance, "ご出席", {value: "出席", style: "display: inline-block;"}%>
      <%= f.radio_button :attendance, "欠席" %>
      <%= f.label :attendance, "ご欠席", {value: "欠席", style: "display: inline-block;"}%>
  </div>

  <div class="field">
    <label class="form-text">お名前</label></br>
    <%= f.text_field :last_name, placeholder: "姓" %>
    <%= f.text_field :first_name, placeholder: "名" %>
  </div>

  <div class="field">
    <label class="form-text">お名前 (カナ)</label></br>
    <%= f.text_field :last_name_kana, placeholder: "ヤマダ" %>
    <%= f.text_field :first_name_kana, placeholder: "タロウ" %>
  </div>

  <div class="field">
    <label class="form-text">いずれかをお選び下さい</label></br>
      <%# #新郎ゲスト %>
      <%= f.radio_button :bride_groom, "新郎ゲスト" %>
      <%= f.label :bride_groom, "新郎ゲスト", {value: "新郎ゲスト", style: "display: inline-block;"}%>
      <%# #新婦ゲスト %>
      <%= f.radio_button :bride_groom, "新婦ゲスト" %>
      <%= f.label :bride_groom, "新婦ゲスト", {value: "新婦ゲスト", style: "display: inline-block;"}%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <label class="form-text">郵便番号</label></br>
    <%= f.text_field :postal_code, placeholder: "123-4567" %>
  </div>
  <div class="field">
    <label class="form-text">ご住所</label></br>
    <%= f.text_field :prefecture_code, placeholder: "〇〇県" %>
    <%= f.text_field :city, placeholder: "〇〇市XX区" %></br>
    <%= f.text_field :address, placeholder: "XXXX町1-2-3" %>
    <%= f.text_field :building, placeholder: "〇〇マンション 707" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label class="form-text">Allergy</label></br>
    <p>アレルギーなどございましたらご記入ください</p>
    <%= f.text_area :allergy, placeholder: "卵、えび、かになど" %>
  </div>

  <div class="field">
    <label class="form-text">バスのご利用</label></br>
    <%= f.text_area :bus %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
