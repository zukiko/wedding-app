<div class="invi-wrapper">
  <div class="login">
    <h1>Welcome to our wedding reception!</h1>
    <h2>ご登録のメールアドレスをご入力ください</h2>

    <%= form_with model: @user, url: user_session_path do |f| %>
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
</div>

